<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_dialog_call"
    android:orientation="vertical" >

     <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/main_back" 
 		android:layout_alignParentLeft="true"
 		android:layout_centerVertical="true"
        android:paddingLeft="20dp"/>

    <TextView
            android:id="@+id/call_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="正在呼叫" />
    
    <com.example.es100dome.widget.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/people_imageview"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
 		android:layout_centerVertical="true"
        android:src="@drawable/people_default"
 		android:layout_marginTop="50dp"
       />
     
    <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="10dip"
            android:gravity="center"
            android:text="" />
            
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

         <Button
             android:id="@+id/bt_stop"
             style="?android:buttonBarButtonStyle"
             android:gravity="center"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_centerHorizontal="true"
             android:layout_alignParentBottom="true"
             android:background="@drawable/bg_btn_call_stop"
             android:text="@string/icon_call_end"
             android:textColor="@color/white"
             android:layout_marginBottom="60dip"
             android:textSize="40sp" />
     </RelativeLayout>

</LinearLayout>