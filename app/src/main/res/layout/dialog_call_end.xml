<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/white"
    android:layout_width="690pt"
    android:layout_height="378pt"
    android:gravity="center_horizontal"
    android:orientation="vertical">
<TextView
    android:layout_marginTop="64pt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#F65342"
    android:textSize="90pt"
    android:text="@string/icon_warning"/>
    <TextView
        android:layout_marginTop="24pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否确定退出该会议"
        android:textSize="34pt"
        android:textColor="@color/text_mine"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5pt"
        android:background="@color/divider_mine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_mine"
            android:textSize="34pt"/>
        <View
            android:layout_width="0.5pt"
            android:layout_height="match_parent"
            android:background="@color/divider_mine"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_mine"
            android:textSize="34pt"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>