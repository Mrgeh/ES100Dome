<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/white"
    android:layout_width="350dp"
    android:layout_height="230dp"
    android:orientation="vertical">
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会议时间延长"
        android:textSize="16sp"
        android:textColor="@color/text_mine"/>
    <LinearLayout
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
               android:id="@+id/tv_10"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="10分钟"
                android:background="@drawable/shape_demute_all"/>
            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                />
            <TextView
                android:id="@+id/tv_20"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="20分钟"
                android:background="@drawable/shape_demute_all"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_30"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="30分钟"
                android:background="@drawable/shape_demute_all"/>
            <View
                android:layout_width="12dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_60"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="1小时"
                android:background="@drawable/shape_demute_all"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_120"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="2小时"
                android:background="@drawable/shape_demute_all"/>
            <View
                android:layout_width="12dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_180"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="3小时"
                android:background="@drawable/shape_demute_all"/>
        </LinearLayout>
    </LinearLayout>
   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无法切回视频会议"
        android:textSize="16sp"
        android:textColor="@color/text_mine"/>-->
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/divider_mine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_mine"
            android:textSize="17sp"/>
        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="@color/divider_mine"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_mine"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>