              android:textColor="#ff646464"
              android:textSize="18sp"
              android:layout_marginRight="110dip"
              android:text="我" />
          </LinearLayout>-->
		 <LinearLayout
			 android:layout_toRightOf="@id/people_imageview"
				android:layout_marginLeft="@dimen/margin_10dp"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:orientation="horizontal"
			 android:layout_alignParentBottom="true"
			 android:layout_marginBottom="@dimen/margin_10dp"
			 >
			  <TextView
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:orientation="vertical"
			 android:textColor="#ff646464"
			 android:textSize="15sp"
			 android:text="本地IP:"/>
			 <TextView
				 android:id="@+id/ip_textview"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:orientation="vertical"
				 android:textColor="#ff646464"
				 android:textSize="15sp"
				 android:text=""/>
		 </LinearLayout>

        <Button android:id="@+id/personal_edit"
				android:layout_alignParentTop="true"
				android:layout_marginTop="@dimen/margin_10dp"
                android:layout_width="70dip"
                android:layout_height="35dip"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:background="@drawable/person_detail_edit_bg_selector"
        />
       
    </RelativeLayout>

     <!--<TextView
	android:layout_width="match_parent"
	android:layout_height="50dip"
	android:orientation="vertical"
	android:background="@drawable/personal_head_bg"
	android:gravity="center_vertical"
	android:paddingLeft="20dip"
	android:textColor="#ff646464"
	android:textSize="16sp"
	android:text="IP地址">
</TextView>

	<TextView
		android:id="@+id/ip_textview"
		android:layout_width="match_parent"
		android:layout_height="80dip"
		android:orientation="vertical"
		android:gravity="center_vertical"
		android:paddingLeft="20dip"
		android:textColor="#ff646464"
