	<RelativeLayout
		android:id="@+id/layout_about"
		android:layout_width="match_parent"
		android:layout_height="50dip"
		android:background="@drawable/personal_detail_bg_selector"
		>
	        <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent" 
	         android:gravity="center_vertical"
	         android:paddingLeft="20dip"
	          android:textColor="#ff646464"
	         android:textSize="16sp"
	         android:text="关于">
             </TextView>
	        <ImageView
	            android:id="@+id/person_about"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="25dip"
	            android:scaleType="fitXY"
	            android:src="@drawable/personal_about" />
     </RelativeLayout>

     
     <RelativeLayout
         android:id="@+id/layout_setting"
         android:layout_width="match_parent"
         android:layout_height="50dip"
         android:background="@drawable/personal_detail_bg_selector"
         android:layout_marginTop="6dip"
         >
	        <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent" 
	         android:gravity="center_vertical"
	         android:paddingLeft="20dip"
	          android:textColor="#ff646464"
	         android:textSize="16sp"
	         android:text="查看服务器">
             </TextView>
	        <ImageView
	            android:id="@+id/person_setting"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="25dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/personal_about" />
     </RelativeLayout>
     
     
     
     <RelativeLayout
         android:id="@+id/layout_changePwd"
         android:layout_width="match_parent"
         android:layout_height="50dip"
         android:background="@drawable/personal_detail_bg_selector"
         android:layout_marginTop="6dip"
         >
	        <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent" 
	         android:gravity="center_vertical"
	         android:paddingLeft="20dip"
	          android:textColor="#ff646464"
	         android:textSize="16sp"
	         android:text="修改密码">
             </TextView>
	        <ImageView
	            android:id="@+id/changePwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="25dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/personal_about" />
     </RelativeLayout>
     
     
     <RelativeLayout
         android:id="@+id/layout_upgate"
         android:layout_width="match_parent"
         android:layout_height="50dip"
         android:background="@drawable/personal_detail_bg_selector"
         android:layout_marginTop="6dip"
         >
	        <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent" 
	         android:gravity="center_vertical"
	         android:paddingLeft="20dip"
	          android:textColor="#ff646464"
	         android:textSize="16sp"
	         android:text="检测更新">
             </TextView>
	        <ImageView
	            android:id="@+id/upgate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="25dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/personal_about" />
     </RelativeLayout>
     
     
     <RelativeLayout
         android:id="@+id/layout_cancel"
         android:layout_width="match_parent"
         android:layout_height="50dip"
         android:background="@drawable/personal_detail_bg_selector"
         android:layout_marginTop="6dip"
         >
	        <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent" 
	         android:gravity="center_vertical"
	         android:paddingLeft="20dip"
	          android:textColor="#ff646464"
	         android:textSize="16sp"
	         android:text="退出">
             </TextView>
	        <ImageView
	            android:id="@+id/person_cancel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="25dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/personal_about" />
     </RelativeLayout>
     <View
		 android:layout_width="match_parent"
		 android:layout_height="0dp"
		 android:layout_weight="1"/>
	<TextView
		android:id="@+id/tv1"
		android:layout_gravity="center_horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ff646464"
		android:textSize="12sp"
		android:text="@string/about_company1"/>
	<TextView
		android:id="@+id/tv2"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="5dp"
		android:layout_gravity="center_horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ff646464"
		android:textSize="12sp"
		android:text="@string/about_company2"/>
</LinearLayout>