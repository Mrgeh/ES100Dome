<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:visibility="gone"
        android:background="@drawable/frag_title_bg" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/config_about"
            android:textColor="@android:color/white"
            android:textSize="16dip" />

        <ImageView
            android:id="@+id/textView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:clickable="true"
            android:src="@drawable/main_back" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/hideinput_id"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"

                android:visibility="visible"/>

            <LinearLayout
                style="@style/settings_item_linearLayout"
                android:layout_marginTop="0dip" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textColor="@color/blue_text_clorl_selector"
                    android:textSize="17dp" />

               <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="2dip"
                    android:singleLine="true"
                    android:text="es100"
			         android:textColor="@android:color/black"
                    android:textSize="16sp" >
                </TextView>

            </LinearLayout>

            <LinearLayout style="@style/settings_item_linearLayout" android:weightSum="1">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textColor="@color/blue_text_clorl_selector"
                    android:textSize="17dp" />

                <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dip"
                        android:singleLine="true"
                        android:text="@string/softwareversion"
                        android:textColor="@android:color/black"
                        android:textSize="16sp">

                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/settings_item_linearLayout" android:weightSum="1">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_id"
                    android:textColor="@color/blue_text_clorl_selector"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_net_model"

                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="2dip"
                    android:singleLine="true"
                    android:text="865479025555555"
			         android:textColor="@android:color/black"
                    android:textSize="16sp">


                </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="150dip"
                android:layout_height="45dip"
                android:layout_gravity="center"
                android:layout_marginTop="25dip"
                android:background="@drawable/bg_btn_update"
                android:paddingLeft="30dip"
                android:text="@string/update"
                android:visibility="gone"
                android:textSize="18dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>