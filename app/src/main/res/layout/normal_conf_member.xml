            android:textSize="18sp"
            android:id="@+id/tv_key_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
