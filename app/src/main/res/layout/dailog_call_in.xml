<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_dialog_call"
    android:orientation="vertical">

    <TextView
        android:id="@+id/call_status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="来电信息"
        android:textColor="@color/white"
        android:textSize="20sp" />

        <com.es100.widget.CircleImageView
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dip"
            android:id="@+id/people_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        tools:text="172.16.6.88" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_accept"
            style="?android:buttonBarButtonStyle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/bg_btn_call_accept"
            android:text="@string/icon_phone"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <Button
            android:id="@+id/bt_stop"
            style="?android:buttonBarButtonStyle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/bg_btn_call_stop"
            android:text="@string/icon_call_end"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </LinearLayout>


</LinearLayout>