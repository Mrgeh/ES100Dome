            <!--android:text="点名发言中"/>-->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_apply_speak"
                android:layout_width="64dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_apply_speak"
                android:text="允许发言"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_cancel_speak"
                android:layout_width="64dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_cancel_speak"
                android:text="结束发言"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_up_down"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_down"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
    <com.example.es100dome.widget.ExpandableLayout
