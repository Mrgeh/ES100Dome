                    android:id="@+id/tv_host_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FE943E"
                    android:textSize="10sp"
                    android:text="主持人 "/>
                <TextView
                    android:id="@+id/tv_chairman_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FE943E"
                    android:textSize="10sp"
                    android:text="主讲人 "/>
                <TextView
                    android:id="@+id/tv_aux_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FE943E"
                    android:textSize="10sp"
                    android:text="辅流 "/>
                <TextView
                    android:id="@+id/tv_speak_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FE943E"
                    android:textSize="10sp"
                    android:text="发言 "/>
                <TextView
                    android:id="@+id/tv_broadcast_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FE943E"
                    android:textSize="10sp"
                    android:text="广播 "/>
